{% extends 'base.html.twig' %}

{% block title %}Connexion - Ma Boutique Symfony{% endblock %}

{% block content %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes loggé en tant que  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h1>
    <label for="inputEmail">Votre email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Saisissez votre email" required autofocus>
    <label for="inputPassword">Votre mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Saisissez votre mot de passe" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <hr>
    <button class="btn btn-lg btn-primary btn-sm " type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
